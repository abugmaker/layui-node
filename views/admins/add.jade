div(style="margin:15px")
	form.layui-form()
		.layui-form-item
			label.layui-form-label 用户名
			.layui-input-block
				input.layui-input(type="text", name="name", placeholder="请输入用户名", autocomplete="off")
		.layui-form-item
			label.layui-form-label 职位
			.layui-input-block
				input.layui-input(type="text", name="position", placeholder="请输入职位", autocomplete="off")
		.layui-form-item
			label.layui-form-label 状态
			.layui-input-block
				input(type="radio", name="status", value=1, title="启用", checked)
				input(type="radio", name="status", value=0, title="关闭")
		button(lay-filter="edit", style="display: none;", lay-submit)